# File managed by Chef

<% if not @allows.empty? -%>
  <% @allows.each do |allow| -%>
  allow <%= allow %>;
  <% end -%>
<% end -%>

<% if not @parameters.empty? -%>
  <% @parameters.each do |parameter| -%>
  <%= parameter %>;
  <% end -%>
<% end -%>

<% if not @options.empty? -%>
  <% @options.each do |option| -%>
  option <%= option %>;
  <% end -%>
<% end -%>

include "<%= @dhcp_dir %>/groups.d/group_list.conf";
include "<%= @dhcp_dir %>/subnets.d/subnet_list.conf";
include "<%= @dhcp_dir %>/hosts.d/host_list.conf";
